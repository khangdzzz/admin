{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*", "./dist/*"]
    },
    "baseUrl": "./"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.enum.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/i18n/index.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
